<p id="notice"><%= notice %></p>

<h1>Planets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td class="options">
          <%= link_to '<i class="material-icons show">remove_red_eye</i>'.html_safe, planet %>
          <%= link_to '<i class="material-icons edit">edit</i>'.html_safe, edit_planet_path(planet) %>
          <%= link_to '<i class="material-icons delete">delete</i>'.html_safe, planet, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new">
  <%= link_to '<i class="material-icons">add</i>New Planet'.html_safe, new_planet_path %>
</div>
