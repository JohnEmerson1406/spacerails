<p id="notice"><%= notice %></p>

<h1>Planets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= link_to '<i class="material-icons">remove_red_eye</i>'.html_safe, planet %></td>
        <td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_planet_path(planet) %></td>
        <td><%= link_to '<i class="material-icons">delete</i>'.html_safe, planet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planet', new_planet_path %>
